<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.gsein.blog.articlemanager.mapper.ArticleMapper">
    <resultMap id="BaseResultMap" type="cn.gsein.blog.articlemanager.entity.Article">
        <id column="article_id" jdbcType="VARCHAR" property="articleId"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="publish_time" jdbcType="TIMESTAMP" property="publishTime"/>
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
        <association property="user" column="user_id" select="cn.gsein.blog.usermanager.mapper.UserMapper.queryByPrimaryKey"/>
        <association property="articleType" column="article_type_id" select="cn.gsein.blog.articlemanager.mapper.ArticleTypeMapper.queryByPrimaryKey" />
    </resultMap>
    <select id="queryAll" resultMap="BaseResultMap">
        select article_id, user_id, article_type_id, title, publish_time, content from article
    </select>
    <select id="queryByUserId" parameterType="Integer" resultMap="BaseResultMap">
        select * from article where user_id = #{id}
    </select>
    <insert id="insert" parameterType="cn.gsein.blog.articlemanager.entity.Article" >
        insert into article
        (article_id, user_id, article_type_id, title, content, publish_time)
        VALUES
        (#{articleId}, #{user.userId}, #{articleType.articleTypeId}, #{title}, #{content}, #{publishTime})
    </insert>
</mapper>